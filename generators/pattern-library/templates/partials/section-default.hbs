 * @title Default comment block template
 *
 */
-->

<div id="{{toID title}}">

  <h2>{{ title }}</h2>

  {{#each files as |file| }}

    {{#each file.data as |data| }}

      {{> block-title data=data}}
      
      {{> preview file=file}}
      
      {{> tag-details file=file}}
    
    {{/each}}

    <p>File: {{ file.path }}</p>

  {{/each}}

</div>