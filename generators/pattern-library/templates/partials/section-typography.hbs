<div id="{{toID title}}">

  <h2>{{ title }}</h2>

  {{#each files as |file| }}

    <div id="{{toID file.path @index }}">

      {{#each file.data as |data| }}

        {{> block-title data=data}}

        {{#each data.serializedCode as |serialized| }}

          <div>
      	    
            <p>Font Family: 

              <code>

        	      {{#each serialized.value as |value| }}

      			      {{ value }}{{#unless @last}}, {{/unless}}

      		      {{/each}}

              </code>

            </p>

    		    <p>Variable: {{ serialized.variable }}</p>

      		  <p style="font-family: {{ serial.value }};">The quick brown fox jumps over the lazy dog.</p>

            {{#if serialized.comment }}

              <p>{{ serialized.comment }}</p>

            {{/if }}

          </div>

        {{/each}}

      {{/each}}

    </div>

  {{/each }}

</div>