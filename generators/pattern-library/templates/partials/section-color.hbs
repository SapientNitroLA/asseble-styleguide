<section id="{{toID title}}" class="sugar-section-color">

  <div class="sugar-section-wrapper">
    
  <h2>{{ title }}</h2>

    {{#each files as |file| }}
    <div class="sugar-component">

      <div id="{{toID file.path @index}}">

        {{~#each file.data as |data| }}

          {{> block-title data=data}}

          {{~#each data.serializedCode as |serial| }}

            <div class="sugar-swatch-container">

              <div class="sugar-color-swatch" style="background-color:{{ serial.value }}"></div>

              <!-- <div class="sugar-swatch-code"> -->

                <pre class="sugar-swatch-var">{{ serial.variable }}</pre>
                <pre class="sugar-swatch-val">{{ serial.value }}</pre>

              <!-- </div> -->

              {{#if serial.comment }}

                <div class="sugar-color-comment">
                  <p>{{ serial.comment }}</p>
                </div>

              {{/if}}

            </div>

          {{/each }}

        {{~/each }}

      </div>

      {{> file-path file=file}}
    
    </div>
    {{~/each }}

  </div>

</section>