<div class="container">
    {{#each this}}
        <div class="font-block">
			<p class="font-name">Font Family: {{value}}</p>
			<p class="font-variable">Variable: {{variable}}</p>
			<p style="font-family: {{value}};">The quick brown fox jumps over the lazy dog.</p>
			{{ #if comment }}
				<p class="font-comment">{{ comment }}</p>
			{{ /if }}
        </div>
    {{/each}}
</div>