<div>
  <h2>{{ title }}</h2>
  {{#each files}}
  <div class="file-block">
    <h3>{{ path }}</h3>
    {{#each data}}
    <div class="comment-block">
      <dl class="desc">
        {{#each tags}}
        <dt>{{ tag }}</dt>
        <dd>{{#if optional}}<i>(Optional)</i> {{/if}}{{ description }}</dd>
        {{/each}}
      </dl>
<pre class="code">
{{ source }}
</pre>
    </div>
    {{/each}}
  </div>
  {{/each}}
</div>